<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Отображение выражения -->
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:gravity="end" />

    <!-- Отображение результата -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:textColor="#000"
        android:layout_below="@id/tvExpression"
        android:gravity="end"
        android:layout_marginTop="16dp" />

    <!-- Сетка кнопок -->
    <GridLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResult"
        android:layout_alignParentBottom="true"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:padding="10dp">

        <!-- Кнопка очистки -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="28sp"
            android:backgroundTint="#00a896"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Кнопка скобки открывающей -->
        <Button
            android:id="@+id/btnOpenBracket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="("
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Кнопка скобки закрывающей -->
        <Button
            android:id="@+id/btnCloseBracket"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text=")"
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Кнопка деления -->
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="/"
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Числа и остальные кнопки -->
        <!-- Строка с числами 7, 8, 9 и кнопкой умножения -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="*"
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Строка с числами 4, 5, 6 и кнопкой вычитания -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Строка с числами 1, 2, 3 и кнопкой сложения -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <!-- Строка с кнопками AC, 0, точка и равно -->
        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="AC"
            android:textSize="28sp"
            android:backgroundTint="#00a896"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="28sp"
            android:backgroundTint="#99e2b4"
            android:textColor="#000"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="28sp"
            android:backgroundTint="#02c39a"
            android:textColor="#fff"
            android:layout_gravity="fill" />

    </GridLayout>
</RelativeLayout>
